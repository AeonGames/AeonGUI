# Use broken brackets
style=allman
# No Tabs
convert-tabs
# Add brackets to one line conditionals
add-brackets
# Indent namespaces
indent-namespaces
# Add spaces besides operators
pad-oper 
# Add spaces between parens and inside statements
pad-paren
# We're adding brackets to one line conditional statements,
# No indent is clearer to read.
min-conditional-indent=0
# recurse directory tree
recursive
# Exclude external and auto generated code.
exclude=md5
exclude=sha1
exclude=crc
exclude=GLee
exclude=resources 
exclude=logo.c
exclude=logo.h
exclude=Vera.c
exclude=Vera.h
exclude=wglext.h
